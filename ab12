<div class="button-container">
    <button class="btn btn-primary" id="bookNowBtn">Book Now</button>

    <div id="bookFormModal" class="modal">
        <div class="modal-content">
            <span class="closeBtn">&times;</span>
            <form class="login-form" id="loginForm" method="POST" action="">
                <h2>Login</h2>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="username" required maxlength="20" autocomplete="off">
                </div><br>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required maxlength="10">
                </div>
                <button type="submit">Login</button><br>
                <div class="links">
                    <a href="#" id="signInLink">Sign in?</a>
                </div>
            </form>
            <div id="signInFormContainer"></div>
        </div>
    </div>
</div>





document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('bookFormModal');
    const btn = document.getElementById('bookNowBtn');
    const span = document.getElementsByClassName('closeBtn')[0];

    // Function to display the modal when the button is clicked
    btn.onclick = function() {
        modal.style.display = 'block';
    }

    // Function to close the modal when the close button is clicked
    span.onclick = function() {
        modal.style.display = 'none';
    }

    // Function to close the modal when clicking outside the modal
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }

    // Selecting elements for login, forgot password, and sign-in forms
    const loginForm = document.getElementById('loginForm');
    const forgotPasswordLink = document.getElementById('forgotPasswordLink');
    const signInLink = document.getElementById('signInLink');
    const forgotPasswordForm = document.getElementById('forgotPasswordForm');
    const signInFormContainer = document.getElementById('signInFormContainer'); // Container for sign-in form

    // Event listener for "Forgot Password?" link
    forgotPasswordLink.onclick = function(event) {
        event.preventDefault(); // Prevent default link behavior
        // Hide login form, show forgot password form, hide sign-in form
        loginForm.style.display = 'none';
        forgotPasswordForm.style.display = 'block';
        signInFormContainer.innerHTML = ''; // Clear sign-in form container
    }

    // Event listener for "Sign in?" link
    signInLink.onclick = function(event) {
        event.preventDefault(); // Prevent default link behavior
        // Hide login form, hide forgot password form, show sign-in form
        loginForm.style.display = 'none';
        forgotPasswordForm.style.display = 'none';
        // Load and display the sign-in form file content
        fetch('sign_in_form.html')
            .then(response => response.text())
            .then(html => {
                signInFormContainer.innerHTML = html;
            })
            .catch(error => {
                console.error('Error loading sign-in form:', error);
            });
    }

    // Setting min date for date input
    const dateInput = document.getElementById('date');
    const today = new Date().toISOString().split('T')[0];
    dateInput.setAttribute('min', today);
});
