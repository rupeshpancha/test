 <div class="button-container">
        <button class="btn btn-primary" id="bookNowBtn">Book Now</button>


        <div id="bookFormModal" class="modal">
          <div class="modal-content">
            <span class="closeBtn">&times;</span>
            <form class="login-form" method="POST" action="">
              <h2>Login</h2>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="username" required maxlength="20" autocomplete="off">
              </div><br>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required maxlength="10">
              </div>
              <button type="submit">Login</button><br>
              <div class="links">
                <a href="forgot_password.php">Forgot Password?</a>
                <a href="signIn.php">Sign in?</a>
              </div>
            </form>
          </div>
        </div>
      </div>
document.addEventListener('DOMContentLoaded', function() {
  const modal = document.getElementById('bookFormModal');
   const btn = document.getElementById('bookNowBtn');
  const span = document.getElementsByClassName('closeBtn')[0];

   btn.onclick = function() {
    modal.style.display = 'block';
   }


  span.onclick = function() {
    modal.style.display = 'none';
  }

  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = 'none';
    }
  }

  const form = document.getElementById('bookForm');
  form.onsubmit = function(event) {
    const dateInput = document.getElementById('date');
    const selectedDate = new Date(dateInput.value);
    const today = new Date();
    today.setHours(0, 0, 0, 0); 

    if (selectedDate < today) {
      event.preventDefault();
      alert('Please select a date that is not before today.');
      return false;
    }

    modal.style.display = 'none';
  }
  const dateInput = document.getElementById('date');
  const today = new Date().toISOString().split('T')[0];
  dateInput.setAttribute('min', today);
  
});

