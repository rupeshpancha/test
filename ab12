
<div class="button-container">
    <button class="btn btn-primary" id="bookNowBtn">Book Now</button>

    <div id="bookFormModal" class="modal">
        <div class="modal-content">
            <span class="closeBtn">&times;</span>
            <form class="login-form" id="loginForm" method="POST" action="">
                <h2>Login</h2>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="username" required maxlength="20" autocomplete="off">
                </div><br>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required maxlength="10">
                </div>
                <button type="submit">Login</button><br>
                <div class="links">
                    <a href="#" id="signInLink">Sign in?</a>
                </div>
            </form>
            <div id="signInFormContainer"></div>
        </div>
    </div>
</div>




document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('bookFormModal');
    const btn = document.getElementById('bookNowBtn');
    const span = document.getElementsByClassName('closeBtn')[0];

    btn.onclick = function() {
        modal.style.display = 'block';
    }

    span.onclick = function() {
        modal.style.display = 'none';
    }

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }

    const loginForm = document.getElementById('loginForm');
    const signInLink = document.getElementById('signInLink');
    const signInFormContainer = document.getElementById('signInFormContainer');

    signInLink.onclick = function(event) {
        event.preventDefault();
        loginForm.style.display = 'none';
        signInFormContainer.innerHTML = ''; // Clear previous content
        fetch('signIn.php')
            .then(response => response.text())
            .then(html => {
                signInFormContainer.innerHTML = html;
            })
            .catch(error => {
                console.error('Error fetching sign-in form:', error);
            });
    }

    const dateInput = document.getElementById('date');
    const today = new Date().toISOString().split('T')[0];
    dateInput.setAttribute('min', today);
});
